<?xml version="1.0" encoding="UTF-8"?>
<!-- <xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://tsdm.intel.com/tttd/tools/cmt_code/" elementFormDefault="qualified"> -->
<xs:schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!-- The following attributes, though never used, need to be here as the schema allows any of these or some combination of these (or maybe none) of these attributes -->
  <xs:attribute name="name" type="xs:string" />
  <xs:attribute name="Name" type="xs:string" />
  <xs:attribute name="ProductID" type="xs:string" />
  <xs:attribute name="bin" type="xs:string" />
  <xs:attribute name="binName" type="xs:string" />
  <xs:attribute name="LIID" type="xs:string" />
  <xs:attribute name="unit" type="xs:string" />
  <xs:attribute name="dataType" type="xs:string" />
  <xs:attribute name="multiplier" type="xs:string" />

  <!-- Definitions of elements used in the main body -->
  <xs:element name="Attribute" >
    <xs:complexType>
      <xs:simpleContent>
        <xs:extension base="xs:string">
          <xs:attribute name="name" type="xs:string" />
          <xs:anyAttribute namespace="##local" />
          <!-- Allows other attributes like "unit", "multiplier", "dataType", which are defined at the start of this schema file -->
        </xs:extension>
      </xs:simpleContent>
    </xs:complexType>
  </xs:element>

  <xs:element name="BOM">
    <xs:complexType>
      <xs:simpleContent>
        <xs:extension base="xs:string">
          <xs:attribute name="name" type="xs:string" />
        </xs:extension>
      </xs:simpleContent>
    </xs:complexType>
  </xs:element>

  <xs:element name="AttributePerBOM" >
    <xs:complexType>
      <xs:sequence>
        <xs:element name="BOM" minOccurs="0" maxOccurs="unbounded" />
      </xs:sequence>
      <xs:anyAttribute namespace="##local" />
    </xs:complexType>
  </xs:element>

 <xs:element name="BinMatrix">
  <xs:complexType>
    <xs:sequence>
      <xs:element name="BinMatrixRevision" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
      <xs:element name="ProductFamily" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
      <xs:element name="SupportedProduct" minOccurs="0" maxOccurs="unbounded">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="Product" minOccurs="0" maxOccurs="unbounded">
              <xs:complexType>
                <xs:simpleContent>
                  <xs:extension base="xs:string">
                    <xs:anyAttribute namespace="##local" />
                  </xs:extension>
                </xs:simpleContent>
              </xs:complexType>
            </xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <!--      <xs:any minOccurs="0" maxOccurs ="2"/> -->
      <xs:element name="BOMGroupTable" minOccurs="1" maxOccurs="1">
         <xs:complexType>
            <xs:sequence>
              <xs:element name="BOMGroup" minOccurs="1" maxOccurs="unbounded">
              <xs:complexType>
                <xs:sequence>
                  <xs:element name="BOMList" minOccurs="0" maxOccurs="unbounded">
                    <xs:complexType>
                      <xs:sequence>
                        <xs:element name="BOM" type="xs:string" minOccurs="0" maxOccurs="unbounded" />
                      </xs:sequence>
                    </xs:complexType>
                  </xs:element>
                  <xs:element name="ActiveFlowList" minOccurs="1" maxOccurs="unbounded">
                    <xs:complexType>
                      <xs:sequence>
                        <xs:element name="Flow" minOccurs="0" maxOccurs="unbounded" >
                          <xs:complexType>
                            <xs:sequence>

                              <xs:element name="Attribute" minOccurs="0" maxOccurs="unbounded" /> <!-- Defined at the beginning of the file -->
                              <xs:element name="AttributePerBOM" minOccurs="0" maxOccurs="unbounded" /> <!-- Defined at the beginning of the file -->

                            </xs:sequence>
                            <xs:attribute name="index" type="xs:string" use="required" />
                            <xs:anyAttribute namespace="##local"/>
                            <!-- Making any other attributes like "bin", "binName" as flexible -->
                          </xs:complexType>
                        </xs:element>
                      </xs:sequence>
                    </xs:complexType>
                  </xs:element>
		  <xs:element name="InactiveFlowList" minOccurs="0" maxOccurs="unbounded" type="xs:anyType" />
                </xs:sequence>
                <xs:attribute name="name" type="xs:string" use="required" />
              </xs:complexType>
            </xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
  </xs:sequence>
  <xs:attribute name="name" type="xs:string" use="required" />
</xs:complexType>                 
</xs:element>

</xs:schema>
